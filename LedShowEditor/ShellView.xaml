<controls:MetroWindow 
    x:Class="LedShowEditor.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cal="http://www.caliburnproject.org"
        xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:playfield="clr-namespace:LedShowEditor.Display.Playfield"
        xmlns:timeline="clr-namespace:LedShowEditor.Display.Timeline"
        xmlns:ledTree="clr-namespace:LedShowEditor.Display.LedTree"
        xmlns:tools="clr-namespace:LedShowEditor.Display.Tools"
        Width="1600"
        Height="800"
        >
    <Grid>
        <Grid Background="#FFC1C0C0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="305" />
                <ColumnDefinition />
                <ColumnDefinition Width="600"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Left Column Area -->
            <ledTree:LedTreeView 
            Grid.Column="0"
            Grid.Row="0"
            Margin="2"
            Background="#FFECECEC"
            cal:View.Model="{Binding LedTree}"          
            />

            <!-- Middle Column Area -->
            <playfield:PlayfieldView 
            Grid.Column="1"
            Grid.Row="0"
            Margin="2"
            Background="#FFECECEC"
            cal:View.Model="{Binding Playfield}"          
            />

            <!-- Right Column Area -->
            <tools:ToolsView 
            Grid.Column="2"
            Grid.Row="0"
            Margin="2"
            Background="#FFECECEC"
            cal:View.Model="{Binding Tools}"          
            />

            <!-- Bottom Row Area -->
            <timeline:TimelineView 
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Grid.Row="1"
            Margin="2"
            Background="#FFECECEC"
            cal:View.Model="{Binding Timeline}"          
            />
        </Grid>
    </Grid>

</controls:MetroWindow>