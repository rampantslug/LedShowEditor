<UserControl
    x:Class="LedShowEditor.Display.LedTree.LedTreeView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cal="http://www.caliburnproject.org"
        xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:leds="clr-namespace:LedShowEditor.ViewModels">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/controls.treeview.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style x:Key="AdvancedTreeViewItemStyle" TargetType="{x:Type TreeViewItem}" BasedOn="{StaticResource MetroTreeViewItem}">
                <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}" />
                <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}" />
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="40"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <TreeView 
            BorderThickness="0"
            ItemsSource="{Binding LedsVm.Groups}"
            Background="#FFECECEC"
            ItemContainerStyle="{StaticResource AdvancedTreeViewItemStyle}"
            >
            <TreeView.Resources>
                <HierarchicalDataTemplate
                    DataType="{x:Type leds:GroupViewModel}"
                    ItemsSource="{Binding Leds}"
                    >
                    <Grid>
                        <TextBlock
                            Margin="2"
                            Text="{Binding Name}" 
                            >
                        </TextBlock>
                        <Grid.ContextMenu>
                            <ContextMenu>
                                <MenuItem 
                                    Header="Delete" 
                                    cal:Message.Attach="DeleteGroup()"                                   
                                    />
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="30"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="5"/>
                                        <ColumnDefinition MinWidth="100"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock 
                                        Grid.Column="0"
                                        Grid.ColumnSpan="2"
                                        Grid.Row="0"
                                        Text="Rename"
                                        />
                                    <TextBox 
                                        Grid.Column="1"
                                        Grid.Row="1"
                                        Text="{Binding Name}"/>
                                </Grid>
                            </ContextMenu>
                        </Grid.ContextMenu>
                    </Grid>

                       

                </HierarchicalDataTemplate>
                <DataTemplate
                    DataType="{x:Type leds:LedViewModel}"
                    >
                    <Grid>
                        <TextBlock
                            Margin="2"
                            Text="{Binding Name}" 
                            >
                        </TextBlock>
                        <Grid.ContextMenu>
                            <ContextMenu>
                                <MenuItem 
                                    Header="Delete" 
                                    cal:Message.Attach="DeleteLed()"                                   
                                    />
                                <MenuItem 
                                    Header="Duplicate" 
                                    cal:Message.Attach="DuplicateLed()"                                   
                                    />
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="30"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="5"/>
                                        <ColumnDefinition MinWidth="100"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock 
                                        Grid.Column="0"
                                        Grid.ColumnSpan="2"
                                        Grid.Row="0"
                                        Text="Rename"
                                        />
                                    <TextBox 
                                        Grid.Column="1"
                                        Grid.Row="1"
                                        Text="{Binding Name}"/>
                                </Grid>
                            </ContextMenu>
                        </Grid.ContextMenu>
                    </Grid>
                </DataTemplate>
                
            </TreeView.Resources>
        </TreeView>
        <StackPanel 
            Grid.Row="1"
            Orientation="Horizontal">
            <Button 
                Margin="5"
                x:Name="AddLed"
                Content="Add new led"
                />
            <Button 
                Margin="5"
                x:Name="AddGroup"
                Content="Add new group"
                />
        </StackPanel>
    </Grid>

</UserControl>